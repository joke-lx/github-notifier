# GitHub 配置
GITHUB_TOKEN=your_github_token_here

# GitLab 配置 (可选)
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_URL=https://gitlab.com

# Bitbucket 配置 (可选)
BITBUCKET_TOKEN=your_bitbucket_token_here

# 启用的代码平台 (github,gitlab,bitbucket) - 逗号分隔
ENABLED_PLATFORMS=github

# GLM API 配置 (智谱AI)
GLM_API_KEY=your_glm_api_key_here
GLM_API_URL=https://open.bigmodel.cn/api/paas/v4/chat/completions

# Notion 配置
NOTION_TOKEN=your_notion_integration_token_here
NOTION_DATABASE_ID=your_database_id_here

# QQ Bot 配置 (使用 NapCat 或 go-cqhttp)
QQ_BOT_TOKEN=your_qq_bot_token_here
QQ_GROUP_ID=your_group_id_here
QQ_BOT_HOST=127.0.0.1
QQ_BOT_PORT=3000

# 邮件通知配置
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Telegram Bot 配置 (完全免费)
# 获取 Bot Token: @BotFather
# 获取 Chat ID: @userinfobot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# 钉钉机器人配置 (完全免费)
# 获取 Webhook: 钉钉群 -> 群设置 -> 智能群助手 -> 添加机器人 -> 自定义
DINGTALK_WEBHOOK=your_dingtalk_webhook_url
DINGTALK_SECRET=  # 可选，加签验证

# 飞书机器人配置 (完全免费)
# 获取 Webhook: 飞书群 -> 群设置 -> 群机器人 -> 添加机器人 -> 自定义
FEISHU_WEBHOOK=your_feishu_webhook_url

# Server酱微信推送配置 (有免费额度限制)
SERVERCHAN_SEND_KEY=your_serverchan_send_key

# 企业微信机器人配置 (完全免费，官方稳定，推荐)
# 获取方式: 企业微信群 -> 群设置 -> 群机器人 -> 添加机器人 -> 获取 Webhook URL
WEWORK_WEBHOOK=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your_key_here

# 企业微信应用消息配置 (完全免费，官方接口，推荐)
# 获取方式: 企业微信管理后台 -> 应用管理 -> 你的应用 -> 基本信息
WECOM_CORP_ID=your_corp_id_here
WECOM_AGENT_ID=your_agent_id_here
WECOM_SECRET=your_secret_here
# 接收人（可选，默认发送给所有人 @all，也可指定成员ID，多个用|分隔）
WECOM_TO_USER=@all

# PushPlus 微信推送配置 (有免费额度限制)
# 获取方式: http://www.pushplus.plus/ -> 登录 -> 发送消息 -> 获取 Token
PUSHPLUS_TOKEN=your_pushplus_token

# 监控配置
MONITOR_LANGUAGES=TypeScript,JavaScript,Vue,React,Next.js
MIN_STARS=100
MIN_GROWTH=5

# 内存优化配置
AUTO_CLEAN_ENABLED=true
CLEAN_INTERVAL_HOURS=6
MEMORY_THRESHOLD_MB=800
LOG_RETENTION_DAYS=7

# 深度分析配置
TEMP_CODE_DIR=/tmp/github-analysis
MAX_REPO_SIZE_MB=50
MAX_FILE_COUNT=500
DEEP_ANALYSIS_ENABLED=true
FALLBACK_TO_README=true
GIT_CLONE_TIMEOUT_MS=60000

# 调度配置
# 支持简单时间格式 (HH:MM) 或 Cron表达式
SCHEDULE=08:00
# 时区支持: Asia/Shanghai, Asia/Tokyo, America/New_York, Europe/London, UTC 等
TZ=Asia/Shanghai

# Web服务器配置 (可选)
WEB_SERVER_ENABLED=false
WEB_SERVER_PORT=3000
